{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Glyph",
	"version": "0.1.0",
	"identifier": "com.karatsidhu.glyph",
	"build": {
		"beforeDevCommand": "corepack pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "corepack pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"macOSPrivateApi": true,
		"windows": [
			{
				"label": "main",
				"title": "Glyph",
				"width": 800,
				"height": 600,
				"decorations": true,
				"titleBarStyle": "Overlay",
				"trafficLightPosition": {
					"x": 14,
					"y": 24
				},
				"hiddenTitle": true,
				"transparent": true
			},
			{
				"label": "settings",
				"title": "Settings",
				"width": 760,
				"height": 640,
				"decorations": false,
				"transparent": true,
				"visible": false,
				"url": "#/settings?tab=general"
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"createUpdaterArtifacts": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUzMDlDQjRBQkM2ODYzMEMKUldRTVkyaThTc3NKNHpsV1pzbXpnMFZPSXFKdnhWU082eFpjYU1nVlRWZjhuRVpQZXl5ekF6cGoK",
			"endpoints": [
				"https://github.com/SidhuK/Glyph/releases/latest/download/latest.json"
			]
		}
	}
}
