{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Tether",
	"version": "0.1.0",
	"identifier": "com.karatsidhu.tether",
	"build": {
		"beforeDevCommand": "corepack pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "corepack pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"macOSPrivateApi": true,
		"windows": [
			{
				"label": "main",
				"title": "Tether",
				"width": 800,
				"height": 600,
				"decorations": true,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"transparent": true
			},
			{
				"label": "settings",
				"title": "Settings",
				"width": 760,
				"height": 640,
				"decorations": true,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"transparent": true,
				"visible": false,
				"url": "#/settings?tab=general"
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
